[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build SimpleReverb"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run ReverbGUI"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run SimpleReverb"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run ReverbGUI Demo"


[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build ReverbVST"

